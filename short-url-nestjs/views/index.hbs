<html>

<head>
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=EB+Garamond:400,500,700" rel="stylesheet">
	<style type="text/css">
		body {
			display: flex;
			flex-flow: column wrap;
			justify-content: center;
			align-items: center;
			background: #f6c974;
			color: #fff;
			font-family: 'Montserrat', 'Tahoma';
		}
		table {
          width: 100%;
        }

        table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
        }

        th, td {
          padding: 2px 4px;
        }
		h4 {
			font-size: 18px;
			font-weight: 400;
		}
	</style>
</head>

<body>
    <img src="https://miro.medium.com/max/830/1*Pdw7h5X6vQQNVopIzHBG6A.jpeg" width="500">

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <form action="/shortUrl" method="post" role="form" enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <label for="originalUrl">Enter Url</label>
                            <input required type="url" class="form-control" name="originalUrl" id="originalUrl" placeholder="Enter Url">
                            <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-striped table-bordered table-hover table-responsive table-condensed">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Usage</th>
                </tr>
            </thead>
            <tbody>
                {{#each shortUrls}}
                    <tr>
                        <td>{{this.originalUrl}}</td>
                        <td><a href="http://localhost:3000/shorturl/{{this.shortUrl}}">{{this.shortUrl}}</a></td>
                        <td>{{this.linkUsage}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>

</html>